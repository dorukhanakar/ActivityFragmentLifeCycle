<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_purple"
    android:orientation="vertical"
    tools:context="com.androidedu.kodluyoruzakademi.activityfragmentlifecycle.MainActivity">

    <fragment
        android:id="@+id/headlines_fragment_a"
        android:name="com.androidedu.kodluyoruzakademi.activityfragmentlifecycle.AFragment"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        tools:layout="@layout/fragment_a" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/holo_red_light"
        android:orientation="horizontal"
        tools:context="com.androidedu.kodluyoruzakademi.activityfragmentlifecycle.MainActivity">

        <fragment
            android:id="@+id/headlines_fragment_b"
            android:name="com.androidedu.kodluyoruzakademi.activityfragmentlifecycle.BFragment"
            android:layout_width="178dp"
            android:layout_height="match_parent"
            tools:layout="@layout/fragment_b"
            android:layout_gravity="start"/>

        <LinearLayout
            android:id="@+id/headlines_fragment_c"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            tools:context="com.androidedu.kodluyoruzakademi.activityfragmentlifecycle.MainActivity">


        </LinearLayout>

    </LinearLayout>





</LinearLayout>